<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="m-10 w-auto mb-6  flex flex-col">
      <div>
        <%= form.label :product_name, style: "display: block", class:"block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4" %>
        <%= form.text_field :product_name, placeholder:"Computer", class:"bg-gray-200 w-96 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
      <br><br>
      <div>
        <%= form.label :product_description, style: "display: block", class:"block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4" %>
        <%= form.text_area :product_description, placeholder:"Lorem ipsum....", class:"bg-gray-200 w-96 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
      <br><br>
      <div>
        <%= form.label :product_price, style: "display: block", class:"block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4" %>
        <%= form.number_field :product_price, placeholder:"29.99", class:"bg-gray-200 w-96 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
      <br><br>
      <div>
        <%= form.label :user_id, style: "display: block", class:"block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4" %>
        <%= form.number_field :user_id, placeholder:"1", class:"bg-gray-200 w-96 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
      <br><br>
      <div>
        <%= form.submit class:"shadow bg-green-700 hover:bg-green-500 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
      </div><br>
    </div>
  </form>
<% end %>
