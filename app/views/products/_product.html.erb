<div class="w-full flex flex-col p-2">
  <div class=" text-gray-100 ml-10 shadow-lg shadow-gray-300 w-full md:w-96 h-52 bg-gradient-to-br from-gray-800 to-gray-400 p-4 rounded relative max-w-[24rem]">
    <div id="<%= dom_id product %>">
      <p class="font-bold">
        <strong>Product name:</strong>
        <%= product.product_name %>
      </p>

      <p class="my-1 text-sm">
        <strong>Product description:</strong>
        <%= product.product_description %>
      </p>

      <p class="my-1 text-sm">
        <strong>Product price:</strong>
        <%= product.product_price %>
      </p>

      <span class="text-lg font-extrabold absolute right-4 bottom-4">
        <%= link_to "Show this product", product, class:"inline-flex bg-blue-700 text-white rounded-full h-6 px-3 justify-center items-center p-5 hover:bg-blue-500" %>
      </span>
    </div>
  </div>
</div>
