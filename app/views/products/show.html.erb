<br>
<p style="color: green"><%= notice %></p>
<br>
<section class="ml-10 mr-auto"><br>
  <h2 class="font-bold text-3xl">Product: </h2><br>
  <div>
    <%= render @product %>
  </div>
  <br><br>
  <div>
    <%= link_to "Edit product", edit_product_path(@product), class:"shadow bg-green-700 hover:bg-green-500 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %> |
    <%= link_to "Back", products_path, class:"shadow bg-gray-700 hover:bg-gray-500 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
    <br><br><br>
    <%= button_to "Delete", @product, method: :delete, class:"shadow bg-red-700 hover:bg-red-500 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
  </div><br><br>
</section>
